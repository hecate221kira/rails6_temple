
/! Main Sidebar Container
%aside.main-sidebar.sidebar-dark-primary.elevation-4
  /! Brand Logo
  %a.brand-link{href: root_path}
    = image_pack_tag 'logo.png', class: 'brand-image img-circle elevation-3'
    %span.brand-text.font-weight-light Dashboard
  /! Sidebar
  .sidebar
    /! Sidebar Menu
    %nav.mt-2
      %ul.nav.nav-pills.nav-sidebar.flex-column{"data-accordion"=>"false", "data-widget"=>"treeview", :role=>"menu"}
        %li.nav-item
          = link_to root_path, class: "nav-link #{admin_active_for(root_path, current_path)}" do
            %i.nav-icon.fas.fa-tachometer-alt
            %p Dashboard
        %li.nav-item
          = link_to '#', class: "nav-link" do
            %i.nav-icon.fas.fa-th
            %p Your menu
